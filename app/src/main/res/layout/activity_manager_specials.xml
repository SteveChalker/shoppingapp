<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".manager_specials.ManagerSpecialsActivity">

    <TextView
        android:id="@+id/manager_specials_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_s_specials"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/view_spacing_margin"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/manager_Specials_recyclerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manager_Specials_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/view_spacing_margin"
        android:layout_marginEnd="@dimen/view_spacing_margin"
        app:layout_constraintTop_toBottomOf="@id/manager_specials_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>